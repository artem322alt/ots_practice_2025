import turtle


def perform_switch_case(state, t, turn):
    x = round(t.position()[0] / 10)
    y = round(t.position()[1] / 10)
   #num_turns = 5 #поменял на 1

    if state == "RIGHT":
        t.forward(10)

        if turn <= 0:
            state = "STOP"
            return state, turn
        if x >= turn:
            state = "UP"
            t.setheading(90)
            return state, turn
        return state, turn

    if state == "INIT":
        state = "RIGHT"
        t.setheading(0)
        return state, turn

    if state == "UP":
        t.forward(10)

        if y >= turn:
            state = "LEFT"
            t.setheading(180)
            return state, turn
        return state, turn

    if state == "LEFT":
        t.forward(10)

        if x <= -turn:
            state = "DOWN"
            t.setheading(270)
            return state, turn
        return state, turn

    if state == "DOWN":
        t.forward(10)

        if y <= -turn:
            state = "RIGHT"
            t.setheading(0)
            turn -= 1
            return state, turn
        return state, turn

    return state, turn


def draw():
    start_state = "INIT"
    end_state = "STOP"
    curr_state = start_state
    t = turtle.Turtle()
    t.speed(0)
    turn = 5  # Исходный размер спирали
    t.penup()
    t.goto(turn * 10-110, -turn * 10-20)
    t.pendown()
    while curr_state != end_state:
        curr_state, turn = perform_switch_case(curr_state, t, turn)
    turtle.done()


if name == "main":
    draw()
